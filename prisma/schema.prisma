generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id 
  name      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  status    UserStatus?
  items     Items[]
}

model UserStatus {
  id        String   @id @default(cuid())
  userId    String   @unique
  level     Int      @default(1)
  commit    Int      @default(0)
  coin      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      Users    @relation(fields: [userId], references: [id])
}

model Items {
  id          String   @id @default(cuid())
  equipmentId String
  name        String
  image       String
  description String
  type        String
  attack      Int?
  defense     Int?
  price       Int
  equipped    Boolean  @default(false)
  userId      String
  user        Users    @relation(fields: [userId], references: [id])

  @@unique([userId, equipmentId])
}
