generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id 
  name      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  status    UserStatus?
  items     Items[]
  avatar    Avatar[]
}

model UserStatus {
  id               String   @id @default(cuid())
  userId           String   @unique
  level            Int      @default(1)
  commit           Int      @default(0)
  coin             Int      @default(100)
  hp               Int      @default(100)
  attack           Int      @default(10)
  defense          Int      @default(5)
  selectedAvatar   String?
  unlockedAvatars  String[] @default([])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now()) @updatedAt

  user Users @relation(fields: [userId], references: [id])
}

model Items {
  id          String   @id @default(cuid())
  equipmentId String
  name        String
  image       String
  description String
  type        String
  attack      Int?
  defense     Int?
  price       Int
  equipped    Boolean  @default(false)
  userId      String
  user        Users    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@unique([userId, equipmentId])
}

model Avatar {
  id        String   @id @default(cuid())
  name      String
  image     String
  description String
  type        String
  hp          Int?
  attack      Int?
  defense     Int?
  price       Int
  equipped    Boolean  @default(false)
  userId      String
  user        Users    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}